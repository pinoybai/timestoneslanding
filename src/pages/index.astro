---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main>
		<div class="night">
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
			<div class="shooting_star"></div>
		</div>
		<section class="hero">
			<h1>Every hour is a rare gift, which can never be given twice.</h1>
		</section>
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		z-index: 1;
		overflow: hidden;
	}

	.night {
		position: absolute;
		width: 100%;
		height: 100%;
		transform: rotateZ(45deg);
		z-index: 0;
	}

	.shooting_star {
		position: absolute;
		left: 50%;
		top: 50%;
		height: 2px;
		background: linear-gradient(-45deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0));
		border-radius: 999px;
		filter: drop-shadow(0 0 6px rgba(255, 255, 255, 0.8));
		animation:
			tail 3000ms ease-in-out infinite,
			shooting 3000ms ease-in-out infinite;
	}

	.shooting_star::before,
	.shooting_star::after {
		content: '';
		position: absolute;
		top: calc(50% - 1px);
		right: 0;
		height: 2px;
		background: linear-gradient(-45deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 1), rgba(255, 255, 255, 0));
		transform: translateX(50%) rotateZ(45deg);
		border-radius: 100%;
		animation: shining 3000ms ease-in-out infinite;
	}

	.shooting_star::after {
		transform: translateX(50%) rotateZ(-45deg);
	}

	.shooting_star:nth-child(1) { top: calc(50% - 150px); left: calc(50% - 200px); animation-delay: 1500ms; }
	.shooting_star:nth-child(1)::before, .shooting_star:nth-child(1)::after { animation-delay: 1500ms; }

	.shooting_star:nth-child(2) { top: calc(50% - 50px); left: calc(50% - 100px); animation-delay: 500ms; }
	.shooting_star:nth-child(2)::before, .shooting_star:nth-child(2)::after { animation-delay: 500ms; }

	.shooting_star:nth-child(3) { top: calc(50% + 80px); left: calc(50% - 250px); animation-delay: 2800ms; }
	.shooting_star:nth-child(3)::before, .shooting_star:nth-child(3)::after { animation-delay: 2800ms; }

	.shooting_star:nth-child(4) { top: calc(50% - 100px); left: calc(50% - 50px); animation-delay: 4200ms; }
	.shooting_star:nth-child(4)::before, .shooting_star:nth-child(4)::after { animation-delay: 4200ms; }

	.shooting_star:nth-child(5) { top: calc(50% + 120px); left: calc(50% - 180px); animation-delay: 900ms; }
	.shooting_star:nth-child(5)::before, .shooting_star:nth-child(5)::after { animation-delay: 900ms; }

	.shooting_star:nth-child(6) { top: calc(50% - 180px); left: calc(50% - 120px); animation-delay: 3600ms; }
	.shooting_star:nth-child(6)::before, .shooting_star:nth-child(6)::after { animation-delay: 3600ms; }

	.shooting_star:nth-child(7) { top: calc(50% + 50px); left: calc(50% - 280px); animation-delay: 2100ms; }
	.shooting_star:nth-child(7)::before, .shooting_star:nth-child(7)::after { animation-delay: 2100ms; }

	.shooting_star:nth-child(8) { top: calc(50% - 70px); left: calc(50% - 150px); animation-delay: 5500ms; }
	.shooting_star:nth-child(8)::before, .shooting_star:nth-child(8)::after { animation-delay: 5500ms; }

	@keyframes tail {
		0% {
			width: 0;
		}
		30% {
			width: 100px;
		}
		100% {
			width: 0;
		}
	}

	@keyframes shining {
		0% {
			width: 0;
		}
		50% {
			width: 30px;
		}
		100% {
			width: 0;
		}
	}

	@keyframes shooting {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(300px);
		}
	}

	.hero {
		position: relative;
		text-align: center;
		padding: 2rem;
		max-width: 900px;
		margin: 0 auto;
		z-index: 2;
	}

	h1 {
		font-family: 'Georgia', 'Times New Roman', serif;
		font-size: clamp(2rem, 5vw, 3.5rem);
		font-weight: 400;
		line-height: 1.4;
		color: #f0f0f0;
		text-shadow: 0 0 20px rgba(255, 255, 255, 0.3),
					 0 0 40px rgba(147, 197, 253, 0.2);
		margin: 0;
		letter-spacing: 0.5px;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 1.5rem;
		}
		
		h1 {
			font-size: clamp(1.5rem, 6vw, 2.5rem);
		}
	}
</style>
